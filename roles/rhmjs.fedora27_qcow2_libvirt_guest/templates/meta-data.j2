instance-id: {{ inventory_hostname }}
local-hostname: {{ inventory_hostname }}
network-interfaces: |
  iface eth0 inet static
  address {{ ip4.cidr | ipaddr('address') }}
  network {{ ip4.cidr | ipaddr('network') }}
  netmask {{ ip4.cidr | ipaddr('netmask') }}
  broadcast {{ ip4.cidr | ipaddr('broadcast') }}
  gateway {{ ip4.gateway }}
bootcmd:
  - ifdown eth0
  - ifup eth0
